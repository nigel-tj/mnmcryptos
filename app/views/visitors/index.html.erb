<h3>Cryptocurrencies by Market Capitalization </h3>

<ul class="tabs" data-tab>
  <li class="tab-title active"><a href="#panel1">Crypto currencies</a></li>
  <li class="tab-title"><a href="#panel2">Tab 2</a></li>
  <li class="tab-title"><a href="#panel3">Tab 3</a></li>
  <li class="tab-title"><a href="#panel4">Tab 4</a></li>
</ul>
<div class="tabs-content">
  <div class="content active" id="panel1">
    <table id="crypo-list" class="table table-striped table-bordered" style="width:100%">
      <thead>
	<tr>
	  <th>#</th>
	  <th>name</th>
	  <th>symbol</th>
	  <th>website slug</th>
	  <th>rank</th>
	  <th>circulating supply</th>
	  <th>total supply</th>
	  <th>max supply</th>
	  <th>last updated</th>
	</tr>
      </thead>
      <tbody>
	<% @data.each do |crypto| %>
	<tr>
	  <td><%= crypto["id"] %></td>
	  <td><%= crypto["name"] %></td>
	  <td><%= crypto["symbol"] %></td>
	  <td><%= crypto["website_slug"] %></td>
	  <td><%= crypto["rank"] %></td>
	  <td><%= crypto["circulating_supply"] %></td>
	  <td><%= crypto["total_supply"] %></td>
	  <td><%= crypto["max_supply"] %></td>
	  <td><%= crypto["last_updated"] %></td>
	</tr>
	<% end %>
      </tbody>
      <tfoot>
	<tr>
	  <th>#</th>
	  <th>name</th>
	  <th>symbol</th>
	  <th>website slug</th>
	  <th>rank</th>
	  <th>circulating supply</th>
	  <th>total supply</th>
	  <th>max supply</th>
	  <th>last updated</th>
	</tr>
      </tfoot>
    </table>
  </div>
